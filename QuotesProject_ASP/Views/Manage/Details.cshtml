@model QuotesProject_ASP.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Change your account settings</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Role:</dt>
        <dd>
            @Model.Role
            @if (Model.Role == "Administrator")
            {
                @Html.ActionLink("Set role to user", "SetRole", new { id = Model.Id, role = "User" }, new { @class = "btn btn-info" })
            }
            else
            {
                @Html.ActionLink("Set role to admin", "SetRole", new { id = Model.Id, role = "Administrator" }, new { @class = "btn btn-info" })
            }
        </dd>
        <dt>Username:</dt>
        <dd>
            @Model.UserName
        </dd>
        <dt>Email:</dt>
        <dd>
            @Model.Email
        </dd>
        <dt>Birthdate:</dt>
        <dd>
            @Model.BirthDate
        </dd>
    </dl>
    @Html.ActionLink("Delete", "Delete", new { id = Model.Id }, new { @class = "btn btn-info" })
</div>

